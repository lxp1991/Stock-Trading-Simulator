<Window x:Class="WpfApplication1.AddCompanyToFavoriteList"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add Company" Height="153" Width="322">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" MappingMode="RelativeToBoundingBox" StartPoint="0.5,0">
                <GradientStop Color="#FFEEEEEE" Offset="1"/>
                <GradientStop Color="#FFE43939" Offset="0.167"/>
                <GradientStop Color="#FFFFD800" Offset="0.5"/>
            </LinearGradientBrush>
        </Grid.Background>
        <TextBox Name="AddFavoriteBox" Margin="101,26,92,0" Text="Enter stock symbol" GotFocus="AddFavorite_Box_OnFocus" TextChanged="AddFavorite_TextChanged" RenderTransformOrigin="0.5,0.5" Height="33" VerticalAlignment="Top">    
        </TextBox>
        <Button Content="Yes" HorizontalAlignment="Left" Style="{StaticResource buttonStyle}" VerticalAlignment="Top" Width="70" Margin="58,76,0,0" Click="Yes_Clicked" Height="28" RenderTransformOrigin="0.5,0.5"/>
        <Button Content="Cancel" HorizontalAlignment="Left" Style="{StaticResource buttonStyle}" VerticalAlignment="Top" Width="70" Margin="191,76,0,0" Click="Cancel_Clicked" Height="28" RenderTransformOrigin="0.5,0.5"/>

    </Grid>
</Window>
