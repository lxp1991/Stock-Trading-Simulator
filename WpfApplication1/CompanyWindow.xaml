<Window x:Class="WpfApplication1.CompanyWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Company Window" Height="373" Width="552">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" MappingMode="RelativeToBoundingBox" StartPoint="0.5,0">
                <GradientStop Color="#FFEEEEEE" Offset="1"/>
                <GradientStop Color="#FFE43939" Offset="0.167"/>
                <GradientStop Color="#FFFFD800" Offset="0.5"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Button Margin="35,36,386,236" Content="More Details" Click="More_Details_Clicked" Style="{StaticResource buttonStyle}" Height="Auto" Width="Auto">
        </Button>
        <Button Margin="35,144,386,125" Content="Place Trade" Click="Place_Trade_Clicked" Style="{StaticResource buttonStyle}" Height="Auto" Width="Auto">
        </Button>
        <Button Margin="35,245,386,20" Content="Add to Favorites" Click="Add_to_Favorites_Clicked" Style="{StaticResource buttonStyle}" Height="Auto" Width="Auto">
        </Button>
        <TextBox Name="CompanyDisplay" Margin="200,36,34,157">
        </TextBox>
        <Image Name="StockChart"  Stretch="Fill" Margin="200,190,34,20" />
    </Grid>
</Window>
